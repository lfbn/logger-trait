{
    "name": "lfbn/logger-trait",
    "description": "A trait that allows you to add logging capabilities to any class.",
    "version": "0.0.1",
    "keywords": [
        "Logging",
        "Logger"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Luís Nóbrega",
            "email": "luis.barros.nobrega@gmail.com"
        }
    ],
    "require": {
        "php": "7.3.9",
        "psr/log": "^1.1",
        "monolog/monolog": "^2.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Lfbn\\LoggerTrait\\": "src/"
        }
    },
    "scripts": {
        "tests": "php vendor/bin/phpunit --testdox"
    },
    "minimum-stability": "dev"
}
